	<!-- Settings -->

	<string name="title_activity_settings">设置</string>

	<string name="pref_title_show_hidden_files">展示隐藏文件</string>
	<string name="pref_description_show_hidden_files">展示被其他文件管理器隐藏的文件。</string>

	<string name="pref_title_show_thumbnails">展示缩略图</string>
	<string name="pref_description_show_thumbnails">展示缩略图。关闭此功能将提升软件速度，但你将无法知道文件是否为图片。
	</string>

	<string name="pref_title_remember_location">在最近浏览位置开始</string>
	<string name="pref_description_remember_location">当 &appname; 打开时，将在最近浏览位置开始。
	</string>

        <string name="pref_title_auto_start">自动开始</string>
	<string name="pref_description_auto_start">打开时, &appname; 将生成并播放一个从最近浏览位置开始的幻灯片。
	</string>

	<string name="pref_title_play_from_here">激活"从这里开始"键</string>
	<string name="pref_description_play_from_here">在文件的列表显示的"从这里开始"键可在当前文件夹及其子文件夹生成并播放幻灯片。
		基于可能的负面影响，预设禁用这个功能。
	</string>

	<string name="pref_title_use_device_root">开启GIF格式支持</string>
	<string name="pref_description_use_device_root">前往设备的根目录。将会获得访问手机所有文件权限。包括访问外部存储比如存储卡。(需要有根目录正确工作。）
	</string>

        <string name="pref_title_slide_delay">展示时间</string>
	<string name="pref_description_slide_delay">点击修改每张图片展示的时间.
	</string>

	<string name="pref_title_image_strategy">使用Glide加载图片</string>
	<string name="pref_description_image_strategy">使用Glide加载图片. Glide支持其它功能, 如预加载GIF图像。 禁用该功能将使用旧的用户设置，在有些机型上可能会提升性能。
	</string>

	<string name="pref_title_preload_images">预加载图像</string>
	<string name="pref_description_preload_images">在当前幻灯片放映时加载下一张图像。
		禁用该功能在有些机型上可能会提升性能 ，需要开启Glide图像加载功能。
	</string>

	<string name="pref_title_skip_long_load">跳过加载时间过长的图片</string>
	<string name="pref_description_skip_long_load">跳过加载时间过长的图片。
              跳过是将会在屏幕上显示提醒。
	</string>

	<string name="pref_title_image_details">显示照片的属性</string>
	<string name="pref_description_image_details">暂停时在图片上方显示照片属性。
	</string>

	<string name="pref_title_image_details_during">放映幻灯片是显示照片属性</string>
	<string name="pref_description_image_details_during">放映时时在图片上方显示照片属性。
	</string>

	<string name="pref_title_reverse_order">倒序</string>
	<string name="pref_description_reverse_order">倒序播放幻灯片的照片。
	</string>

	<string name="pref_title_random_order">随机顺序</string>
	<string name="pref_description_random_order">随机播放幻灯片的图片。
	</string>
